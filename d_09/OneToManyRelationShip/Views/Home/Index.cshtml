@{
    ViewData["Title"] = "Home Page";
}
@model User
@await Html.PartialAsync("_Navbar")

<div class="text-center">
    <div class="row">
        <div class="card shadow col-6">
            <div class="card-header h2">Register</div>
            <div class="crad-body">
                <form asp-action="Register" asp-controller="Home" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control">
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LuckyNumber" class="form-label"></label>
                        <input asp-for="LuckyNumber" class="form-control">
                        <span class="text-danger" asp-validation-for="LuckyNumber"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="form-group mb-3 d-flex gap-3 justify-content-center">
                        <label asp-for="IsSubscribed" class="form-label"></label>
                        <input asp-for="IsSubscribed" class="form-check">
                        <span class="text-danger" asp-validation-for="IsSubscribed"></span>
                    </div>
                    <div class="mb-3">
                        <input type="submit" class="btn btn-primary w-100" value="Register">
                    </div>
                </form>
            </div>
        </div>
        <div class="card shadow col-6">
            @* <partial name="_Login"/> *@
            @await Html.PartialAsync("_Login")
        </div>
    </div>
</div>